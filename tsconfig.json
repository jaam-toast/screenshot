{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2015", "es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["api/**/**/*", "index.d.ts", "prod-build.js"],
  "exclude": ["node_modules", "**/*.(spec|test).ts"]
}
